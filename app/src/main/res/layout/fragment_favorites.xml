<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_marginTop="42dp">

    <!-- "내 경로" 카운트 -->
    <TextView
        android:id="@+id/route_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_route_count"
        android:textColor="@color/textColorSecondary"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="8dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/route_count"
        android:padding="16dp" />

    <!-- 빈 리스트 메시지 -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="80dp" >

        <!-- 빈 상태 이미지 -->
        <ImageView
            android:id="@+id/empty_state_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_route"
            android:contentDescription="@string/empty_state_image_desc"
            android:layout_marginBottom="16dp"
            app:tint="@color/mm_blue"/>

        <!-- 설명 텍스트 -->
        <TextView
            android:id="@+id/empty_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_favorites_message"
            android:textColor="@color/textColorSecondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- 추가 설명 -->
        <TextView
            android:id="@+id/empty_state_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_favorites_sub_message"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
