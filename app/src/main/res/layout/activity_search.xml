<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 검색 입력창 -->
    <AutoCompleteTextView
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="지하철 역명 검색"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="12dp"
        android:background="@drawable/background_search_text"
        android:inputType="text"
        android:completionThreshold="1"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- 즐겨찾기 버튼 -->
    <Button
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="즐겨찾기"
        android:layout_gravity="center" />

    <!-- 검색 결과 표시 영역 -->
    <LinearLayout
        android:id="@+id/search_results_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#F5F5F5">

        <!-- 현재 역 -->

        <!-- 이전 역과 다음 역 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 이전 역 -->
            <TextView
                android:id="@+id/previous_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="서화    ◀"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- 현재 역 표시 -->
            <TextView
                android:id="@+id/current_station_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="명지대"
                android:textSize="18sp"
                android:textColor="#FF5722"
                android:textStyle="bold" />

            <!-- 다음 역 -->
            <TextView
                android:id="@+id/next_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="▶     송월"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- 출발, 경유, 도착 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 출발역 버튼 -->
        <Button
            android:id="@+id/start_station_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="출발역"
            android:backgroundTint="#E0E0E0"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp" />

        <!-- 경유역 버튼 -->
        <Button
            android:id="@+id/transfer_station_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="경유역"
            android:backgroundTint="#E0E0E0"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp" />

        <!-- 도착역 버튼 -->
        <Button
            android:id="@+id/end_station_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="도착역"
            android:backgroundTint="#E0E0E0"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- 최근 검색어 목록 -->
    <ListView
        android:id="@+id/recent_searches_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />
</LinearLayout>
